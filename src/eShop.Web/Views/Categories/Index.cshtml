@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold display-4 text-primary">Categories</h1>
            <hr class="my-4">
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm hover-shadow transition">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@category.Name</h5>
                        <p class="card-text text-muted">@category.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="@Url.Action("Index", "Products", new { CategoryIds = new List<int>([category.Id]) })"
                            class="btn btn-outline-primary stretched-link">Browse Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }
</style>
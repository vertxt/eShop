@model eShop.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <h1 class="display-4 mb-4">@Model.StatusCode</h1>
                    <h2 class="mb-4">@Model.Title</h2>
                    <p class="lead mb-4">@Model.Message</p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <div class="mt-5">
                        <a href="/" class="btn btn-primary">Return to Home</a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary ms-2">Go Back</button>
                    </div>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.DeveloperMessage))
            {
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        Developer Details
                    </div>
                    <div class="card-body">
                        <pre class="mb-0"><code>@Model.DeveloperMessage</code></pre>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@{
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    Func<string, string, bool> isActive = (controller, action) => (controller == currentController && action == currentAction);
}

<!-- Navigation Menu Bar -->
<nav class="navigation-menu py-2">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <ul class="nav d-none d-lg-flex">
                @* Home *@
                <li class="nav-item">
                    <a class="nav-link fw-medium text-white position-relative px-3 py-2 mx-1"
                        asp-area=""
                        asp-controller="Home"
                        asp-action="Index"
                    >
                        <span>Home</span>
                        @if (isActive("Home", "Index"))
                        {
                            <span class="position-absolute bottom-0 start-50 translate-middle-x bg-danger" style="height: 2px; width: 50%;"></span>
                        }
                    </a>
                </li>
                @* Categories *@
                <li class="nav-item dropdown">
                    <a class="nav-link fw-medium text-white position-relative px-3 py-2 mx-1"
                       asp-area=""
                       asp-controller="Categories"
                       asp-action="Index"
                    >
                        <span>Categories</span>
                        @if (isActive("Categories", "Index"))
                        {
                            <span class="position-absolute bottom-0 start-50 translate-middle-x bg-danger" style="height: 2px; width: 50%;"></span>
                        }
                    </a>
                </li>
                @* Products *@
                <li class="nav-item">
                    <a class="nav-link fw-medium text-white position-relative px-3 py-2 mx-1"
                        asp-area=""
                        asp-controller="Products"
                        asp-action="Index"
                    >
                        <span>Catalog</span>
                        @if (isActive("Products", "Index"))
                        {
                            <span class="position-absolute bottom-0 start-50 translate-middle-x bg-danger" style="height: 2px; width: 50%;"></span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium text-white position-relative px-3 py-2 mx-1" href="#">
                        <span>Contact</span>
                    </a>
                </li>
            </ul>

            <!-- Right side of nav (promotions, etc) -->
            @* For fun *@
            <div class="d-none d-lg-flex align-items-center">
                <a href="#" class="nav-link text-white-50">
                    <i class="bi bi-gift me-1"></i> Special Offers
                </a>
                <a href="#" class="nav-link text-white-50 ms-3">
                    <i class="bi bi-truck me-1"></i> Track Order
                </a>
            </div>

            <!-- Search Bar (visible only on mobile) -->
            @* For fun *@
            <div class="d-lg-none w-100 mt-2">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute ms-3"
                        style="top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.6);"></i>
                    <input type="text" class="form-control search-input rounded-pill ps-5"
                        placeholder="Search for products...">
                </div>
            </div>
        </div>
    </div>
</nav>
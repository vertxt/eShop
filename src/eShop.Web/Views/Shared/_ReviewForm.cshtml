@model CreateReviewDto

<div class="mt-4">
    <h5>Write a Review</h5>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Please correct the following issues:</h6>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled small mb-0"></div>
        </div>
    }

    <form method="post" asp-page-handler="SubmitReview" asp-route-id="@ViewData["ProductId"]" novalidate>
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" id="reviewTitle">
            <div class="form-text text-danger small">
                <span asp-validation-for="Title"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Rating</label>
            <div>
                <div class="rating">
                    @for (int i = 5; i > 0; i--)
                    {
                        <input type="radio" id="star@(i)" asp-for="Rating" value="@i" />
                        <label for="star@(i)"><i class="bi bi-star-fill"></i></label>
                    }
                </div>
                <div class="form-text text-danger small">
                    <span asp-validation-for="Rating"></span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Body" class="form-label">Review</label>
            <textarea asp-for="Body" class="form-control" id="reviewComment" rows="3"></textarea>
            <div class="form-text text-danger small">
                <span asp-validation-for="Body"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle me-1"></i>Submit
        </button>
    </form>
</div>
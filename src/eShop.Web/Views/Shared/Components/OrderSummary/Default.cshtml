@model CartSummaryDto

<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0">Order Summary</h5>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
            <span>Subtotal (@Model.TotalItems items):</span>
            <span>$@Model.TotalPrice.ToString("F2")</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span>Shipping:</span>
            <span>TBD</span>
        </div>
        <hr />
        <div class="d-flex justify-content-between mb-2">
            <strong>Total:</strong>
            <strong>$@Model.TotalPrice.ToString("F2")</strong>
        </div>
    </div>
    <div class="card-footer">
        <a href="#" class="btn btn-success w-100 @(Model.TotalItems == 0 ? "disabled" : "")">
            <i class="bi bi-credit-card"></i> Proceed to Checkout
        </a>
    </div>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <img src="~/favicon.svg" alt="eShop Logo" class="mb-4" height="80">
            <h1 class="display-4 fw-bold mb-4">eShop Identity Service</h1>
            <p class="lead mb-4">
                Welcome to the eShop Identity Service.
                This service provides secure authentication and authorization for the eShop eCommerce application.
            </p>

            @if (!User.Identity?.IsAuthenticated ?? true)
            {
                <div class="mt-4">
                    <a asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 me-2">Sign In</a>
                    <a asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Create Account</a>
                </div>
            }
            else
            {
                <div class="alert alert-success mt-4" role="alert">
                    <h4 class="alert-heading">You're signed in!</h4>
                    <p>You're currently signed in as <strong>@User.Identity?.Name</strong>.</p>
                    <hr>
                    <p class="mb-0">You can now return to the eShop application.</p>
                </div>
            }
        </div>
    </div>
</div>